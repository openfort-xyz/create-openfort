{
  "name": "openfort-create",
  "version": "0.0.0",
  "description": "A CLI tool to create a new OpenFort project",
  "private": true,
  "workspaces": [
    "packages/*",
    "internal/*"
  ],
  "scripts": {
    "dev": "pnpm --filter create-openfort run dev",
    "dev:template": "pnpm --filter @openfort/template-transformer run dev",
    "build:template": "pnpm --filter @openfort/template-transformer run build",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "changeset": "changeset",
    "changeset:version": "pnpm install --lockfile-only && changeset version",
    "changeset:publish": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.29.7",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "rimraf": "^6.0.1",
    "rollup": "^2.67.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.0",
    "rollup-plugin-visualizer": "^5.5.4",
    "tslib": "^1.9.3",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@10.16.1"
}
